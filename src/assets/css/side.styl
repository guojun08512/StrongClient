.el-submenu.is-active
  background #515A6E
.app-side
  width 200px
  background-color #515A6E
  position absolute
  left 0
  top 57px
  bottom 0
  overflow auto
  overflow-x hidden
  z-index 2
.el-submenu__title
  font-size 16px
.el-menu,
.el-submenu .el-menu
  background #515A6E
.el-menu-item, .el-submenu__title
  color #fff
.el-submenu__title:hover
  background #2D8CF0
  color #fc9b0e
.el-submenu .el-menu-item
  text-align left
  &:hover
    background #2D8CF0
    color #fff
.el-menu--horizontal.el-menu--dark .el-submenu .el-menu-item.is-active, .el-menu-item.is-active
  background #2D8CF0
.el-menu--horizontal.el-menu--dark .el-submenu .el-menu-item.is-active i.icon-item, .el-menu-item.is-active i.icon-item
  background #2D8CF0
.icon-top
  display inline-block
  vertical-align middle
  margin-right 10px
  margin-top -1px
  width 17px
  height 17px
  border none
  background #2D8CF0
  -ms-transform none
  transform none
.icon-item
  display inline-block
  vertical-align middle
  margin-top -1px
  margin-right 5px
  width 10px
  height 10px
  background #2D8CF0
.el-submenu__title:hover .icon-top
  background #2D8CF0
.icon-item:hover,.icon-item:active
  background #2D8CF0
.el-submenu .el-menu-item:hover i.icon-item, .el-submenu__title:hover i.icon-item
  background #2D8CF0
.app-side::-webkit-scrollbar
  width 6px
  height 6px
  background-color #f5f5f5
.app-side::-webkit-scrollbar-track
  -webkit-box-shadow inset 0 0 6px rgba(0,0,0,.3)
  box-shadow inset 0 0 6px rgba(0,0,0,.3)
  border-radius 5px
  background-color #f5f5f5
.app-side::-webkit-scrollbar-thumb
  height 20px
  border-radius 5px
  -webkit-box-shadow inset 0 0 6px rgba(0,0,0,.3)
  box-shadow inset 0 0 6px rgba(0,0,0,.3)
  background-color #555
.el-submenu .el-menu-item
  height 50px
  line-height 50px
.el-submenu__title
  height 50px
  line-height 50px
.el-submenu__icon-arrow
  display none
.el-icon-arrow-down
  display none
.el-submenu__icon-arrow
  width 100%
  height 100%
  background #2D8CF0
.activeOpen
  display block
  z-index 10000
.venue
  color #fff
  padding-left 20px
  background #515A6D
  cursor pointer
  height 50px
  line-height 50px
  font-size 14px
  text-align left
  svg
    padding-right 10px
.define-active
  background #363e4f
  color #409eff !important